<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Analytics Test Runs" annotations="JDK" thread-count="1" configfailurepolicy="continue">

    <parameter name="suiteOwner" value="scho2"/>
    <parameter name="reporting.project-key" value="ANA01"/>
    <parameter name="jenkinsJobType" value="android"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-Analytics-Android-Run"/>
    <parameter name="jenkinsEnvironments" value="mobile.google"/>
    <parameter name="jenkinsDefaultRetryCount" value="1"/>
    <parameter name="stringParam::reporting.tcm.xray.test-execution-key::XRay test execution value" value="XAQA-1688"/>
    <parameter name="jenkinsEmail"
               value="susie.cho@disneystreaming.com,dan.cordell@disneystreaming.com,jeff.demelle@disneystreaming.com,c-brien.perkins@disneystreaming.com,ben.newman@disneystreaming.com"/>
    <parameter name="jenkinsRegressionScheduling" value="0 6 * * *"/>
    <parameter name="jenkinsRegressionPipeline" value="DisneyPlus-Analytics-Android-Pipeline"/>
    <parameter name="jenkinsMobileDefaultPool" value="any"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsRegressionMatrix" value="locale:US, language:en"/>
    <parameter name="overrideFields"
               value="capabilities.deviceType=Phone,capabilities.locale=${locale},capabilities.language=${language},capabilities.custom_env=${custom_env},custom_string=${countries},JOB_MAX_RUN_TIME=600, enable_hora_validation=true"/>
    <parameter name="choiceParam::custom_env::App Environment" value="PROD,QA,EDITORIAL"/>
    <parameter name="choiceParam::locale::Locale to run" value="US,GB,ES,CA,NL,IT,DE,FR,AU,NZ,JP"/>
    <parameter name="choiceParam::language::Language to run" value="en,es,fr,nl,it,de,ja"/>
    <parameter name="choiceParam::groups::Test Group selection. Leave blank to run full regression."
               value=",Smoke,Deeplinks,Downloads,Home,IAP,More Menu,Navigation,Onboarding,Search,Upgrade,Video Player,Welch,qoeplayback,"/>
    <parameter name="choiceParam::appcenter_app_name::AppCenter App Name" value="Disney-Mobile-Prod-Google-Debug,Disney-Mobile-Prod-Google-Release"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test name="DisneyPlusAndroidDeeplinkTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.deeplinks.DisneyPlusAndroidDeeplinkTest">
                <methods>
                    <exclude name="verifyDownloadBadgeExactlyNinetyNine"/>
                    <exclude name="verifyDownloadCompleteSubMenuFunctions"/>
                    <exclude name="verifyPopulatedDownloadsPageUI"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="DisneyPlusAndroidDownloadsScreenTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.downloadsofflineviewing.DisneyPlusAndroidDownloadsScreenTest"/>
        </classes>
    </test>

    <test name="DisneyPlusAndroidHomeTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.home.DisneyPlusAndroidHomeTest"/>
        </classes>
    </test>

    <test name="DisneyPlusAndroidMaturityAddProfileTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.profiles.DisneyPlusAndroidWelchAddProfileTest"/>
        </classes>
    </test>

    <test name="DisneyPlusAndroidLoginTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.onboarding.DisneyPlusAndroidLoginTest"/>
        </classes>
    </test>

    <test name="DisneyPlusAndroidWelcomeScreenTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.onboarding.DisneyPlusAndroidWelcomeScreenTest"/>
        </classes>
    </test>

    <test name="DisneyPlusQoEPlaybackTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.qoeplayback.DisneyPlusQoEPlaybackTest"/>
        </classes>
    </test>

    <test name="DisneyPlusAndroidVideoPlayerTest" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.videoplayer.DisneyPlusAndroidVideoPlayerNoAdsTest"/>
        </classes>
    </test>
</suite>