<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" thread-count="1" name="iOS Handset - Disney+ - Hora Test - Suite" annotations="JDK" configfailurepolicy="continue">

    <parameter name="suiteOwner" value="EDS"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="reporting.notification.slack-channels" value=""/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="Disney-Plus-Apple-iOS-Handset-Hora-Smoke"/>
    <parameter name="jenkinsEnvironments" value="Prod,QA"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsDefaultRetryCount" value="0"/>
    <!-- three below params generate upper level cron job with ability to parametrize and schedule this paricular suite xml job execution -->
    <parameter name="jenkinsRegressionPipeline" value="Daily-Regression-iOS-Handset-Hora-Smoke"/>
    <parameter name="jenkinsRegressionScheduling" value="0 14 * * 1-5"/>
    <!-- comma separated parameter for single launch and semicolon separated for several launches as a matrix-->
    <parameter name="jenkinsRegressionMatrix" value="reporting.notification.slack-channels: esqoi-insights-test-automation"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="maxNumberKeepBuilds" value="500"/>
    <parameter name="capabilities" value="platformName=iOS;deviceName=ANY;deviceType=Phone;timeoutMs=120000"/>
    <parameter name="overrideFields" value="JOB_MAX_RUN_TIME=600,enable_hora_validation=true"/>
    <parameter name="choiceParam::groups::Group" value="hora_smoke"/>
    <parameter name="choiceParam::appcenter_app_name::AppCenter App Name" value="Disney-Prod-Enterprise,Disney-Enterprise"/>
    <parameter name="stringParam::hora_non_critical_failures::Hora non-critical failures override" value="null"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test parallel="methods" name="Disney Plus Smoke Device Test">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.ios.eds.DisneyPlusHoraSmokeTest"/>
        </classes>
    </test>

</suite>
