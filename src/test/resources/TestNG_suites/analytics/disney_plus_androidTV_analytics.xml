<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Analytics Test Runs" annotations="JDK" thread-count="5"
       configfailurepolicy="continue">

    <parameter name="suiteOwner" value="scho2"/>
    <parameter name="reporting.project-key" value="ANA01"/>
    <parameter name="stringParam::reporting.tcm.xray.test-execution-key::XRay test execution value" value="XAQA-1785"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="Disney-FireTV-Prod-Debug"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android-tv"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-Analytics-AndroidTV-Run"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="jenkinsRegressionPipeline" value="DisneyPlus-Analytics-AndroidTV-Pipeline"/>
    <parameter name="jenkinsRegressionScheduling" value="H 3 * * *"/>
    <parameter name="jenkinsEmail" value="susie.cho@disneystreaming.com,dan.cordell@disneystreaming.com,jeff.demelle@disneystreaming.com,c-brien.perkins@disneystreaming.com,ben.newman@disneystreaming.com"/>
    <parameter name="jenkinsRegressionMatrix"
               value="deviceName:Amazon-FireTV_Stick_4K_Max; deviceName:Amazon-FireTV_Stick_4K_2;"/>
    <parameter name="jenkinsMobileDefaultPool" value="Amazon-FireTV_Stick_4K_Max,Amazon-FireTV_Stick_4K_2,Amazon_FireTV_Stick_4K_Max_1,Amazon_FireTV_Cube_2nd_Gen,Amazon_FireTV_Cube_2nd_Gen_1"/>
    <parameter name="jenkinsEnvironments" value="tv.amazon.debug"/>
    <parameter name="choiceParam::custom_env::App Environment" value="PROD"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsRegressionMatrix" value="locale:US, language:en"/>
    <parameter name="overrideFields"
               value="capabilities.remoteAppsCacheLimit=0,capabilities.deviceType=TV,capabilities.custom_env=${custom_env},capabilities.STF_ENABLED=true,capabilities.enableVideo=false,capabilities.androidInstallTimeout=180000,capabilities.appWaitDuration=180000,JOB_MAX_RUN_TIME=600,enable_hora_validation=true"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test verbose="1" name="Disney Plus Home tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVHomeScreenTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus SignUp tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSignUpScreenTest">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Login tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVLoginScreenTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Forgot Password tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVForgotPasswordTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Movies tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVMoviesScreenTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Profile tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVProfileTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Series tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSeriesTests">
            </class>
        </classes>
    </test>
</suite>