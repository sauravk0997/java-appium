<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite verbose="1" name= "Web - Genie - Suite" parallel="tests" thread-count="2">

    <parameter name="suiteOwner" value="Web QAA"/>
    <parameter name="reporting.project-key" value="DIS" />
    <parameter name="reporting.notification.slack-channels" value="genie-automation-zebrunner"/>
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsJobName" value="Genie-Smoke-Test"/>
    <parameter name="jenkinsUrl" value="https://genie-qa.us-east-1.bamgrid.net/launchpad/offers"/>
    <parameter name="jenkinsEmail" value="webqa@disneystreaming.com, web-qaa-team@disneystreaming.com"/>
    <parameter name="jenkinsEnvironments" value="QA,DEV"/>
    <parameter name="jenkinsRegressionPipeline" value="Genie-Web-Smoke-Pipeline"/>
    <parameter name="jenkinsRegressionScheduling" value="@daily"/>
    <parameter name="jenkinsQueueRegistration" value="false"/>
    <parameter name="jenkinsRegressionMatrix" value="browser:chrome"/>
    <parameter name="jenkinsDefaultRetryCount" value="3"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
    <parameter name="overrideFields" value="test_naming_pattern={method_description}"/>

    <test name="Web - Genie - Entitlement Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.genie.GenieEntitlementTest"/>
        </classes>
    </test>

    <test name="Web - Genie - Product Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.genie.GenieProductTest"/>
        </classes>
    </test>

    <test name="Web - Genie - SKU Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.genie.GenieSkuTest"/>
        </classes>
    </test>

    <test name="Web - Genie - Partner Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.genie.GeniePartnerTest"/>
        </classes>
    </test>

    <test name="Web - Genie - Promotions Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.genie.GeniePromotionTest"/>
        </classes>
    </test>

</suite>
