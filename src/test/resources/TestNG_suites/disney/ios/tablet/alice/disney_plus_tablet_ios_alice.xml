<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="ios_tablet_alice" annotations="JDK" configfailurepolicy="continue"  thread-count="1" parallel="tests">

    <parameter name="suiteOwner" value="csolmaz"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="choiceParam::appcenter_app_name::app center app name"
               value="Disney-Prod-Enterprise,Dominguez-Non-IAP-Prod-Enterprise-for-Automation"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="ios_tablet_alice"/>
    <parameter name="jenkinsEnvironments" value="Prod"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities"
               value="platformName=iOS;deviceName=iPad_Pro_Gen_3;deviceType=Tablet;timeoutMs=120000;appPushTimeout=90000"/>
    <parameter name="jenkinsDefaultRetryCount" value="0"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
    <parameter name="jenkinsJobExecutionOrder" value="1"/>
    <parameter name="jenkinsJobExecutionMode" value="continue"/>
    <parameter name="overrideFields" value="JOB_MAX_RUN_TIME=360,appVersion=${appVersion},init_retry_count=2,init_retry_interval=15"/>
    <parameter name="stringParam::appVersion::input app version for oneTrustConfig" value=""/>

    <parameter name="choiceParam::groups::Test Group selection. Leave blank to run full regression."
               value=",Alice"/>

    <test verbose="1" name="DisneyPlus iOS Tablet Alice" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.ios.regression.alice.DisneyPlusHulkS3BaselineCompare"/>
            <class name="com.disney.qa.tests.disney.apple.ios.regression.alice.DisneyPlusHulkS3Upload"/>
        </classes>
    </test>
</suite>
