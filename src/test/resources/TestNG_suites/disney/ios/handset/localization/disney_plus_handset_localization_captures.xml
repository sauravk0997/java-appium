<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="iOS - Disney+ - Handset Localization Captures" annotations="JDK" configfailurepolicy="continue" thread-count="20" parallel="tests">

    <parameter name="suiteOwner" value="LQA"/>
    <parameter name="reporting.project-key" value="LQA"/>
    <parameter name="choiceParam::appcenter_app_name::AppCenter App Name"
               value="Disney-Prod-Enterprise,Disney-Enterprise"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-iOS-Handset-Localization-Captures"/>
    <parameter name="jenkinsEmail" value=""/>
    <parameter name="jenkinsEnvironments" value="Prod,QA"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities"
               value="platformName=iOS;deviceName=ANY;deviceType=Phone;timeoutMs=120000"/>
    <parameter name="jenkinsDefaultRetryCount" value="1"/>
    <parameter name="booleanParam::enableDebugDisplay::Toggle to enable display dictionary keys in the app" value="false"/>
    <parameter name="overrideFields"
               value="capabilities.locale=${locale},capabilities.language=${language},custom_string2=${globalizationApiVer},custom_string5=${enableDebugDisplay},init_retry_count=2,init_retry_interval=15"/>
    <parameter name="choiceParam::locale::Locale to run"
               value="AD,AL,AR,AT,BA,BE,BG,BR,CA,CK,CH,CX,CZ,DE,DK,EE,ES,FI,FR,GB,GI,GR,GU,HK,HR,HU,IE,IS,IT,JP,KR,LI,LT,LU,LV,ME,MH,MK,MT,MX,NL,NO,PF,PL,PT,RO,RS,SE,SG,SI,SJ,SK,SM,SX,TR,TW,US"/>
    <parameter name="choiceParam::language::Language to run"
               value="cs,da,de,el,en,es,fi,fr,hu,it,ja,ko,nl,no,pl,pt,ro,sk,sv,tr,zh"/>
    <parameter name="choiceParam::groups::Group"
               value="Onboarding - Backgrounds,Onboarding - Full,Subscriber - UI,Subscriber - UI - S1,Subscriber - UI - S2,Subscriber - UI - S3,Subscriber - UI - S4,Subscriber - UI - S5,Subscriber - UI - S6,Subscriber - UI - S7,Subscriber - UI - S8,Subscriber - UI - S10,Subscriber - UI - S13"/>
    <parameter name="booleanParam::unpinDictionaries::Set unpin dictionaries via jarvis" value="false"/>
    <parameter name="stringParam::globalizationApiVer::Specify Globalization API Version" value="1.x.x"/>

    <test verbose="1" name="DisneyPlus iOS Handset Localization Captures" parallel="methods">
        <parameter name="{ds_custom_provider}" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.apple.ios.localization.DisneyPlusAppleLocalizationSubscriberCaptures"/>
        </classes>
    </test>
</suite>