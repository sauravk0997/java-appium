<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="iOS - Disney+ - Handset Playback Capture" annotations="JDK" configfailurepolicy="continue" thread-count="20" parallel="tests">

    <parameter name="suiteOwner" value="jsilveti"/>
    <parameter name="reporting.project-key" value="Development"/>
    <parameter name="choiceParam::appcenter_app_name::AppCenter App Name" value="Disney-Prod-Enterprise,Disney-Enterprise"/>
    <parameter name="jenkinsEnvironments" value="Prod,QA"/>
    <parameter name="choiceParam::content_type::The type of media to be played. programId for a Movie. seriesId for a Series" value="programId,seriesId"/>
    <parameter name="stringParam::content_id::Id of the Media to be played" value=""/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-iOS-Handset-Playback-Capture"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities" value="platformName=iOS;deviceName=ANY;deviceType=Phone;timeoutMs=120000"/>
    <parameter name="jenkinsDefaultRetryCount" value="1"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
    <parameter name="reporting.notification.slack-channels" value="ios-tvos-test-automation"/>
    <parameter name="overrideFields" value="capabilities.contentType=${content_type},capabilities.contentId=${content_id},init_retry_count=2,init_retry_interval=15"/>

    <test verbose="1" name="iOS - Disney+ - Handset Playback Capture" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.ios.playback.DisneyPlusPlaybackCaptureTest"/>
        </classes>
    </test>
</suite>