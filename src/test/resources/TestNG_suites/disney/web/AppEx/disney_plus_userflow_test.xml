<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite verbose="1" name= "Web - Disney+ - User Flow - Suite" parallel="tests">

    <parameter name="suiteOwner" value="Web QAA"/>
    <parameter name="reporting.project-key" value="DIS" />
    <parameter name="reporting.notification.slack-channels" value="dplus-web-automation-zebrunner"/>
    <parameter name="com.zebrunner.app/tcm.qtest.project-id" value="19" />
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsJobName" value="Disney-Plus-Web-User-Flow-Test"/>
    <parameter name="jenkinsUrl" value="https://preview.disneyplus.com/"/>
    <parameter name="jenkinsEmail" value="webqa@disneystreaming.com,derek.smith@disneystreaming.com, web-qaa-team@disneystreaming.com"/>
    <parameter name="jenkinsEnvironments" value="PROD,QA,BETA,PREVIEW"/>
    <parameter name="jenkinsRegressionPipeline" value="Disney-Plus-Web-User-Flow-Pipeline-US-East-1"/>
    <parameter name="jenkinsRegressionScheduling" value="@daily"/>
    <parameter name="jenkinsQueueRegistration" value="false"/>
    <parameter name="jenkinsRegressionMatrix_Disney-Plus-Web-User-Flow-Pipeline-US-East-1" value="browser:chrome, locale:US, language:en; browser:firefox, locale:US, language:en"/>
    <parameter name="stringParam::app_version::Branch to test" value="MAIN"/>
    <parameter name="choiceParam::locale::Locale to run" value="US,GB,ES,CA,NL"/>
    <parameter name="choiceParam::language::Language set for Accounts" value="en,en-GB,es-ES,fr-CA,nl"/>
    <parameter name="booleanParam::proxy_server_geoedge::Request GeoEdge API for IP Address instead of using local proxy-server.yaml file" value="true"/>
    <parameter name="jenkinsDefaultRetryCount" value="1"/>
    <parameter name="overrideFields" value="test_naming_pattern={method_description},locale=${locale},language=${language},thread_count=10"/>

    <test name="Web - Disney+ - User - Email View Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.olpSignup.DisneyPlusUserFlowEmailViewTest"/>
        </classes>
    </test>

    <test name="Web - Disney+ - User - Password View Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.olpSignup.DisneyPlusUserFlowPasswordViewTest"/>
        </classes>
    </test>

    <test name="Web - Disney+ - User - Errors Tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.redirects.DisneyPlusUserFlowErrorsTest"/>
        </classes>
    </test>

</suite>
