<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite verbose="1" name="Web - Disney+ - Global Nav - Suite" parallel="tests" thread-count="50">

    <parameter name="suiteOwner" value="Web QAA"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="reporting.notification.slack-channels" value="dplus-web-automation-zebrunner"/>
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsJobName" value="Disney-Plus-Web-Global-Nav-Test"/>
    <parameter name="jenkinsUrl" value="https://www.disneyplus.com/"/>
    <parameter name="jenkinsEmail" value="webqa@disneystreaming.com,derek.smith@disneystreaming.com, web-qaa-team@disneystreaming.com"/>
    <parameter name="jenkinsEnvironments" value="PROD,QA,BETA,PREVIEW"/>
    <parameter name="jenkinsRegressionPipeline" value="Disney-Plus-Web-Global-Nav-Pipeline-US-East-1"/>
    <parameter name="jenkinsRegressionMatrix_Disney-Plus-Web-Global-Nav-Pipeline-US-East-1" value="browser:chrome, locale:US, language:en; browser:firefox, locale:US, language:en"/>
    <parameter name="jenkinsRegressionScheduling" value="@daily"/>
    <parameter name="jenkinsQueueRegistration" value="false"/>
    <parameter name="stringParam::app_version::Branch to test" value="MAIN"/>
    <parameter name="choiceParam::locale::Locale to run" value="US,GB,ES,CA,NL"/>
    <parameter name="mapLocaleToGroups" value="true"/>
    <parameter name="choiceParam::language::Language set for Accounts" value="en,en-GB"/>
    <parameter name="booleanParam::proxy_har_capture_all::Har Capture all tests" value="false" />
    <parameter name="booleanParam::proxy_har_capture_on_failure::Har Capture only failures" value="false" />
    <parameter name="booleanParam::proxy_server_geoedge::Request GeoEdge API for IP Address instead of using local proxy-server.yaml file" value="true"/>
    <parameter name="jenkinsDefaultRetryCount" value="2"/>
    <parameter name="maxNumberKeepBuilds" value="200"/>
    <parameter name="overrideFields" value="test_naming_pattern={method_description}"/>

    <test name="Web - Disney+ - Global Nav - Hover Tests">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.globalNav.DisneyPlusNavStateHoverTest"/>
        </classes>
    </test>

    <test name="Web - Disney+ - Global Nav - Links Tests">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.globalNav.DisneyPlusNavStateNavLinksTest"/>
        </classes>
    </test>

    <test name="Web - Disney+ - Global Nav - Profile Switcher Tests">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.globalNav.DisneyPlusNavProfileSwitcherTest"/>
        </classes>
    </test>

    <test name="Web - Disney+ - Global Nav - Account Menu Tests">
        <classes>
            <class name="com.disney.qa.tests.disney.web.appex.globalNav.DisneyPlusNavAccountMenuTest"/>
        </classes>
    </test>

</suite>
