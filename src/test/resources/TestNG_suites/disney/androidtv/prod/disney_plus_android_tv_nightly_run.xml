<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="AndroidTV - Disney+ - Nightly Run" annotations="JDK" thread-count="6"
       configfailurepolicy="continue">

    <parameter name="suiteOwner" value="fkhan"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="reporting.notification.slack-channels" value="lrqa-auto-jenkins"/>
    <parameter name="reporting.tcm.xray.test-execution-key" value="XCDQA-106903"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="Disney-AndroidTV-Prod-Debug"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android-tv"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-AndroidTV-Nightly-Run"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="jenkinsEmail"
               value="scott.diller@disneystreaming.com,sean.lavender@disneystreaming.com,Nathan.Lefler@disneystreaming.com,Jennifer.Yee@disneystreaming.com"/>
    <parameter name="scheduling" value="H 10 * * * "/>
    <parameter name="capabilities" value="deviceName=Mi_Box_S,NVIDIA_SHIELDTV_Pro,NVIDIA_SHIELDTV_Pro_1,NVIDIA_SHIELDTV_Pro_3,Mi_Stick,NVIDIA_SHIELD_TV;newCommandTimeout=180;platformName=android"/>
    <parameter name="jenkinsEnvironments" value="tv.google"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="choiceParam::jarvisEnv::App Environment" value="Production"/>
    <parameter name="overrideFields"
               value="capabilities.remoteAppsCacheLimit=0,selenium_url=http://automation-tizen-01.bamtech.co:4446/wd/hub, capabilities.enableAdb=true,capabilities.deviceType=TV,capabilities.custom_env=${jarvisEnv},capabilities.STF_ENABLED=true,capabilities.enableVideo=false,capabilities.androidInstallTimeout=180000,capabilities.appWaitDuration=180000,JOB_MAX_RUN_TIME=600"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test verbose="1" name="Disney Plus Global Navigation tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVGlobalNavTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Multiple Profiles tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVAppEntryMultipleProfilesTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Brand tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVBrandTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Forgot Password tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVForgotPasswordTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Home Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVHomeScreenTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Login tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVLoginScreenTests">
                <methods>
                    <exclude name="noEmailLoginError"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Profiles tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVProfileTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Sign Up Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSignUpScreenTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Welcome Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVWelcomeScreenTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Movie Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVMoviesScreenTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Series Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSeriesTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Watchlist tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVWatchlistTest">
                <methods>
                    <exclude name="starUpcomingEventInWatchlist"></exclude>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Originals Screen tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVOriginalsScreenTests">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Search tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSearchTest">
            </class>
        </classes>
    </test>

    <test verbose="1" name="Disney Plus Collections tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVCollectionTests">
            </class>
        </classes>
    </test>
</suite>