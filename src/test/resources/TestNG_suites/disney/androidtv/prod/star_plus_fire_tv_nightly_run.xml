<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="FireTV - Star+ - Nightly Run" annotations="JDK" thread-count="5"
       configfailurepolicy="continue">

    <parameter name="suiteOwner" value="bpfarr"/>
    <parameter name="reporting.project-key" value="STA"/>
    <parameter name="reporting.notification.slack-channels" value="lrqa-auto-jenkins"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="Star-Fire-TV-Debug"/>
    <parameter name="applicationPackage" value="com.disney.starplus"/>
    <parameter name="jenkinsJobType" value="android-tv"/>
    <parameter name="jenkinsJobName" value="StarPlus-FireTV-Nightly-Run"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="jenkinsEmail"
               value="dan.reiley@disneystreaming.com, scott.diller@disneystreaming.com, joshua.taylor@disneystreaming.com"/>
    <parameter name="scheduling" value="H 1 * * * "/>
    <parameter name="capabilities" value="deviceName=Amazon_FireTV_Cube_2nd_Gen,Amazon-FireTV_Stick_4K_2,Amazon-FireTV_Stick_4K_Max,Amazon_FireTV_Stick_3rd_Gen,Amazon_FireTV_Stick_Lite;newCommandTimeout=180;platformName=android"/>
    <parameter name="jenkinsEnvironments" value="tv.amazon"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="choiceParam::jarvisEnv::App Environment" value="Production"/>
    <parameter name="overrideFields"
               value="partner=star,locale=MX,capabilities.remoteAppsCacheLimit=0,selenium_url=http://automation-tizen-01.bamtech.co:4446/wd/hub,capabilities.enableAdb=true,capabilities.deviceType=TV,capabilities.custom_env=${jarvisEnv},capabilities.STF_ENABLED=true,capabilities.enableVideo=false,capabilities.androidInstallTimeout=180000,capabilities.appWaitDuration=180000,JOB_MAX_RUN_TIME=600"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test verbose="1" name="Star Plus Login tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVLoginScreenTests">
                <methods>
                    <exclude name="hideShowPasswordBtnLoginFlow"/>
                    <exclude name="inactiveSubscriptionLogin"/>
                    <exclude name="unknownEmailScreenVerification"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="Star Plus Details tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVDetailsTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Star Plus Settings tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSettingsTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Star Plus Search tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.StarPlusAndroidTVSearchTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Star Plus Global Nav tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVGlobalNavTest">
                <methods>
                    <exclude name="backBtnExitsApp"/>
                    <exclude name="hiddenGlobalMenu"/>
                    <exclude name="globalNavNonInteractiveWhenCollapsed"/>
                    <exclude name="globalNavExpandedState"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="Star Plus Watchlist tests" parallel="methods">
        <parameter name="star-proxy-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVWatchlistTest">
                <methods>
                    <exclude name="moviesAssetSelectedFromWatchlist"/>
                    <exclude name="seriesAssetSelectedFromWatchlist"/>
                    <exclude name="mostRecentAddedItemAppearsFirst"/>
                    <exclude name="contentAppearsVerticalScrollingGrid"/>
                    <exclude name="watchlistContentSpecificToEachProfile"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
