    <parameter name="jenkinsEnvironments" value="tv.amazon,tv.google"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="choiceParam::groups::Group" value="Home,Profile,GlobalNavigationMenus,Login,LoginPasswordOTP,MoviesDetailAndPlayback,SeriesDetailAndPlayback,SettingMenus,Welch, "/>
