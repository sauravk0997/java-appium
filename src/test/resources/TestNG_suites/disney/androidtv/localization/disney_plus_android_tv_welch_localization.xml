<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="AndroidTV - Disney+ - Welch Localization Screenshots" annotations="JDK" thread-count="3"
       configfailurepolicy="continue" parallel="tests">

    <parameter name="suiteOwner" value="fkhan"/>
    <parameter name="reporting.project-key" value="LQA"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="disney"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android-tv"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-AndroidTV-Welch-Screenshots-Run"/>
    <parameter name="jenkinsEnvironments" value="tv.amazon.debug"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="jenkinsMobileDefaultPool" value="Amazon_FireTV_3rd_Gen,Amazon_FireTV_Cube,Amazon_FireTV_Stick_4k"/>
    <parameter name="choiceParam::locale::Locale to run" value="GB,ES,CA,NL,IT,DE,FR,PT,BR,NO,SE,DK,FI"/>
    <parameter name="choiceParam::language::Language to run" value="en,es,fr,nl,it,de,pt,no,sv,da,fi"/>
    <parameter name="overrideFields"
               value="capabilities.deviceType=TV,capabilities.locale=${locale},capabilities.language=${language},capabilities.STF_ENABLED=true,capabilities.enableVideo=false,capabilities.androidInstallTimeout=180000,capabilities.appWaitDuration=180000"/>

    <test verbose="1" name="Disney Plus Localization Screenshot" parallel="methods">
        <parameter name="browsermob-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.localization.welch.DisneyPlusAndroidTVWelchLocalizationTests">
            </class>
        </classes>
    </test>

</suite>