<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="FireTV - Disney+ - QA - Smoke" annotations="JDK" thread-count="5"
       configfailurepolicy="continue">

    <parameter name="suiteOwner" value="fkhan"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="reporting.notification.slack-channels" value="lrqa-auto-jenkins"/>
    <parameter name="jenkinsJobDisabled" value="true"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="Disney-FireTV-Prod"/>
    <parameter name="com.zebrunner.app/tcm.qtest.project-id" value="61"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android-tv"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-FireTV-QA-Smoke"/>
    <parameter name="jenkinsEnableVideo" value="false"/>
    <parameter name="scheduling" value="H 7 * * * "/>
    <parameter name="jenkinsMobileDefaultPool"
               value="Amazon_FireTV_Cube_2nd_Gen,Amazon_FireTV_Stick_4k,Amazon-FireTV_Stick_4K_2,Amazon-FireTV_Stick_4K_Max"/>
    <parameter name="jenkinsEnvironments" value="tv.amazon.debug,tv.amazon.release"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="choiceParam::groups::Group" value="smoke"/>
    <parameter name="choiceParam::jarvisEnv::App Environment" value="QA"/>
    <parameter name="overrideFields"
               value="capabilities.custom_env=QA,selenium_url=http://automation-tizen-01.bamtech.co:4446/wd/hub, capabilities.enableAdb=true,capabilities.deviceType=TV,capabilities.custom_env=${jarvisEnv},capabilities.STF_ENABLED=true,capabilities.enableVideo=false,capabilities.remoteAppsCacheLimit=0,capabilities.androidInstallTimeout=180000,capabilities.appWaitDuration=180000,JOB_MAX_RUN_TIME=600"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <test verbose="1" name="Disney Plus Global Navigation QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVGlobalNavTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Forgot Password QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVForgotPasswordTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Login QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVLoginScreenTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Profiles QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVProfileTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Sign Up Screen QA tests" parallel="methods">
        <parameter name="browsermob-optional" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSignUpScreenTest">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Movie Screen QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVMoviesScreenTests">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Series Screen QA tests" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.android.tv.DisneyPlusAndroidTVSeriesTests">
            </class>
        </classes>
    </test>
</suite>