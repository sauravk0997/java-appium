<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" thread-count="1" name="Amazon Fire - Disney+ Concurrency Test" annotations="JDK">

    <parameter name="suiteOwner" value="bsuscavage"/>
    <parameter name="reporting.project-key" value="DIS" />
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-Amazon-Fire-Concurrency-Acceptance"/>
    <parameter name="jenkinsEmail" value="mobileqa@disneystreaming.com,nathan.lefler@disneystreaming.com,jennifer.yee@disneystreaming.com,rusty.coleman@hulu.com"/>
    <parameter name="jenkinsRegressionPipeline" value="Disney-Android-Regression-Pipeline"/>
    <parameter name="choiceParam::appcenter_app_name::AppCenter App Name" value="Disney-Fire-Tablet-Prod-Debug,Disney-Fire-Tablet-Prod-Release"/>
    <parameter name="jenkinsEnvironments" value="mobile.amazon"/>
    <parameter name="jenkinsMobileDefaultPool" value="Amazon_Fire_Tab_7,Amazon_Tab_Fire_10,Fire_Tab_HD_10_Gen_9,Fire_Tab_HD_8_Gen_10,Fire_Tab_HD_10_Gen_11,Fire_Tab_HD_10_Plus_Gen_11,Fire_Tab_HD_7_Gen_9"/>
    <parameter name="jenkinsRegressionScheduling" value="H 3 * * *"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsRegressionMatrix" value="locale:US, language:en, env:mobile.amazon"/>
    <parameter name="jenkinsDefaultRetryCount" value="3"/>
    <parameter name="reporting.notification.slack-channels" value="android-mobile-zebrunner-reports"/>
    <parameter name="overrideFields" value="capabilities.deviceType=Tablet,capabilities.locale=${locale},capabilities.language=${language},capabilities.custom_env=${custom_env}"/>
    <parameter name="choiceParam::custom_env::App Environment" value="PROD,QA,EDITORIAL"/>

    <test verbose="1" parallel="methods" name="Disney Plus Fire Tablet Concurrency Limit Test">
        <parameter name="{ds_custom_provider}" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.mobile.videoplayer.DisneyPlusAndroidConcurrencyTest"/>
        </classes>
    </test>

</suite>
