    <parameter name="overrideFields" value="capabilities.deviceType=Tablet,capabilities.locale=${locale},capabilities.language=${language},capabilities.custom_env=${custom_env},custom_string=${profileLanguage},custom_string2=${unpinDictionaries},custom_string3=${setGlobalizationAPI},custom_string4=${globalizationApiVer},custom_string5=${enableDebugDisplay},androidInstallTimeout=120000,adbExecTimeout=90000"/>
