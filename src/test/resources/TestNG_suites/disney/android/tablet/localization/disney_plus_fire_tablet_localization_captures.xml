    <parameter name="booleanParam::unpinDictionaries::Set unpin dictionaries via jarvis" value="false"/>
    <parameter name="choiceParam::appcenter_use_jenkins_build_version::Override hardcoded build version" value="false,true"/>

    <test verbose="1" name="DisneyPlus Fire Tablet Localization Captures" >
        <parameter name="{ds_custom_provider}" value="true"/>
        <classes>
            <class name="com.disney.qa.tests.disney.android.localization.DisneyPlusStarLocalizationCapturesTest"/>
            <class name="com.disney.qa.tests.disney.android.localization.DisneyPlusAndroidOnboardingLocalizationCaptures"/>
        </classes>
    </test>
</suite>