<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" parallel="methods" thread-count="1" name="Android - Disney+ LATAM Ratings Acceptance" annotations="JDK">

    <parameter name="suiteOwner" value="bsuscavage"/>
    <parameter name="reporting.project-key" value="DIS" />
    <parameter name="com.zebrunner.app/tcm.qtest.project-id" value="60"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobType" value="android"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-Android-LATAM-Ratings-Acceptance"/>
