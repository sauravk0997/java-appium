<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Disney - tvOS - Playback - Capture" annotations="JDK" configfailurepolicy="continue" thread-count="13" parallel="tests">

    <parameter name="suiteOwner" value="qait"/>
    <parameter name="reporting.project-key" value="QAIT"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-tvOS-Playback-Capture"/>
    <parameter name="jenkinsEnvironments" value="QA,PROD"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities"
               value="deviceName=ANY;platformName=iOS;deviceType=tvOS"/>
    <parameter name="choiceParam::appcenter_app_name::app center app name" value="Disney-Non-IAP-QA-Enterprise-tvOS,Disney-Non-IAP-Prod-Enterprise-tvOS"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="stringParam::contentType::Content type (for example: programId)" value=""/>
    <parameter name="stringParam::contentId::Content ID" value=""/>
    <parameter name="overrideFields"
               value="custom_string=${contentType},custom_string2=${contentId},init_retry_count=2,init_retry_interval=15"/>

    <test verbose="1" name="Disney Plus tvOS Playback Capture" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.playback.PlaybackCaptureTest">
            </class>
        </classes>
    </test>
</suite>