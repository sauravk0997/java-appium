<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="tvOS - Disney+ - Localization Screenshot Tests" annotations="JDK" configfailurepolicy="continue" thread-count="13" parallel="tests">

    <parameter name="suiteOwner" value="csolmaz"/>
    <parameter name="reporting.project-key" value="LQA"/>
    <parameter name="reporting.notification.slack-channels" value="lrqa-auto-jenkins,ios-tvos-test-automation"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-tvOS-Localization-Screenshots"/>
    <parameter name="jenkinsEnvironments" value="PROD,QA"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities" value="deviceName=ANY;platformName=iOS;deviceType=tvOS"/>
    <parameter name="choiceParam::appcenter_app_name::app center app name" value="Disney-Non-IAP-Prod-Enterprise-tvOS,Disney-Non-IAP-QA-Enterprise-tvOS,Disney-IAP-Prod-Ad-Hoc,Disney-IAP-QA-Ad-Hoc"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="choiceParam::locale::Locale to run"
               value="AD,AL,AR,AT,BA,BE,BG,BR,CA,CK,CH,CX,CZ,DE,DK,EE,ES,FI,FR,GB,GI,GR,GU,HK,HR,HU,IE,IS,IT,JP,KR,LI,LT,LU,LV,ME,MH,MK,MT,MX,NL,NO,PF,PL,PT,RO,RS,SE,SG,SI,SJ,SK,SM,SX,TR,TW,US"/>
    <parameter name="choiceParam::language::Language to run"
               value="cs,da,de,el,en,es,fi,fr,hu,it,ja,ko,nl,no,pl,pt,ro,sk,sv,tr,zh"/>
    <parameter name="choiceParam::groups::Test Group selection. Leave blank to run full regression." value=",Ariel,BGImage,Onboarding,SusbscriberLoginFlow,SubscriberFlowAccountSettings,SubscriberFlowNavSearchWatchlist,SubscriberFlowProfiles,SubscriberFlowSettings,SubscriberFlowSettingsPCON"/>
    <parameter name="booleanParam::unpinDictionaries::Set unpin dictionaries via jarvis" value="false"/>
    <parameter name="booleanParam::debugDictionary::Select to enable dictionary keys" value="false"/>
    <parameter name="stringParam::globalization::Set Globalization API version" value=""/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
    <parameter name="overrideFields"
               value="proxy_server_geoedge=true,capabilities.locale=${locale},capabilities.language=${language},custom_string=${unpinDictionaries},custom_string4=${globalization},custom_string5={debugDictionary},init_retry_count=2,init_retry_interval=15"/>

    <test verbose="1" name="Disney Plus Onboarding Localization Screenshots" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.localization.DisneyPlusAppleTVOnboardingLocalizationCaptures">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Subscriber Localization Screenshots" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.localization.DisneyPlusAppleTVSubscriberLocalizationCaptures">
            </class>
        </classes>
    </test>
</suite>