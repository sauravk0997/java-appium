<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="tvOS - Disney+ - Localization Screenshot Tests" annotations="JDK" thread-count="1" configfailurepolicy="continue">

    <parameter name="suiteOwner" value="csolmaz"/>
    <parameter name="reporting.project-key" value="LQA"/>
    <parameter name="reporting.notification.slack-channels" value="lrqa-auto-jenkins,ios-tvos-test-automation"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-tvOS-Localization-Screenshots"/>
    <parameter name="jenkinsEnvironments" value="PROD,QA"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities" value="deviceName=ATV_4_Gen_3;platformName=iOS;deviceType=tvOS"/>
    <parameter name="choiceParam::appcenter_app_name::app center app name" value="Dominguez-Non-IAP-Prod-Ad-Hoc-tvOS,Dominguez-Non-IAP-QA-Ad-Hoc-tvOS"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="choiceParam::region::Locale to run" value="AD,AL,AT,BA,BE,BG,BR,CA,CK,CH,CX,CZ,DE,DK,EE,ES,FI,FR,GB,GI,GR,GU,HK,HR,HU,IE,IS,IT,JP,KR,LI,LT,LU,LV,ME,MH,MK,MT,MX,NL,NO,PF,PL,PT,RO,RS,SE,SG,SI,SJ,SK,SM,SX,TR,TW,US"/>
    <parameter name="choiceParam::regionLanguage::Language to run" value="cs,da,de,el,en,en-GB,es-419,es,fi,fr-CA,fr,it,it-IT,ja,ko,nl,no,pl,pt-BR,pt,ro,sk,sv,zh"/>
    <parameter name="choiceParam::groups::Test Group selection. Leave blank to run full regression." value=",BGImage,Onboarding,SubscriberFlowAccountSettings,SubscriberFlowNavSearchWatchlist,SubscriberFlowProfiles,SubscriberFlowSettings,SubscriberFlowSettingsPCON"/>
    <parameter name="booleanParam::unpinDictionaries::Set unpin dictionaries via jarvis" value="false"/>
    <parameter name="booleanParam::debugDictionary::Select to enable dictionary keys" value="false"/>
    <parameter name="stringParam::globalization::Set Globalization API version" value=""/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
    <parameter name="overrideFields"
               value="custom_string=${unpinDictionaries},custom_string2=${regionLanguage},custom_string3=${region},custom_string4=${globalization},custom_string5={debugDictionary},browsermob_proxy=true"/>

    <test verbose="1" name="Disney Plus Onboarding Localization Screenshots">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.localization.DisneyPlusAppleTVOnboardingLocalizationCaptures">
            </class>
        </classes>
    </test>
    <test verbose="1" name="Disney Plus Subscriber Localization Screenshots">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.localization.DisneyPlusAppleTVSubscriberLocalizationCaptures">
            </class>
        </classes>
    </test>
</suite>