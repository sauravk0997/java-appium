<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="dmgztvos_hulu_hub" annotations="JDK" configfailurepolicy="continue" thread-count="2"
       parallel="tests">
    <parameter name="suiteOwner" value="apple-automation"/>
    <parameter name="reporting.project-key" value="DIS"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="dmgztvos_hulu_hub"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities" value="deviceName=ATV_4_Gen_12;platformName=iOS;deviceType=tvOS"/>
    <parameter name="choiceParam::appcenter_app_name::app center app name"
               value="Disney-Non-IAP-Prod-Enterprise-tvOS,Disney-Non-IAP-PreProd-Enterprise-tvOS"/>
    <parameter name="choiceParam::env::Test ENV" value="Prod,PreProd"/>
    <parameter name="jenkinsBuild" value="3.9.2.73981"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>
<!--    <parameter name="scheduling" value="H 9 * * 1-5"/>-->
    <parameter name="reporting.notification.slack-channels" value="cse-apple-zebrunner-reports"/>
    <parameter name="hiddenParam::groups::group Name" value="HuluHub"/>
    <parameter name="overrideFields" value="init_retry_count=2,init_retry_interval=15,capabilities.newCommandTimeout=240"/>

    <test verbose="1" name="DisneyPlus tvOS Details" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.details.DisneyPlusAppleTVDetailsScreenTests"/>
        </classes>
    </test>
    <test verbose="1" name="DisneyPlus tvOS Home" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.home.DisneyPlusAppleTVGlobalNavMenuTest"/>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.home.DisneyPlusAppleTVHomeTests"/>
        </classes>
    </test>
    <test verbose="1" name="DisneyPlus tvOS Search" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.search.DisneyPlusAppleTVSearchHuluHubTests"/>
        </classes>
    </test>
</suite>