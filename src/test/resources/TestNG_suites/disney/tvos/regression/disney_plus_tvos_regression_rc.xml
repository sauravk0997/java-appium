    <parameter name="provider" value="mcloud"/>
    <parameter name="capabilities"
               value="deviceName=ANY;platformName=iOS;deviceType=tvOS;newCommandTimeout=180"/>
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="Disney-Non-IAP-Prod-Enterprise-tvOS"/>
