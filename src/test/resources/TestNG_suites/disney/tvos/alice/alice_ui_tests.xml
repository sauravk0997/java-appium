<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="tvOS - Disney+ - Alice - Suite" annotations="JDK" configfailurepolicy="continue" thread-count="13" parallel="tests">

    <parameter name="suiteOwner" value="appleAutomation"/>
    <parameter name="reporting.project-key" value="Development"/>
    <parameter name="jenkinsJobType" value="ios"/>
    <parameter name="jenkinsJobName" value="DisneyPlus-tvOS-Alice-Tests"/>
    <parameter name="capabilities"
               value="deviceName=ANY;platformName=iOS;deviceType=tvOS"/>
    <parameter name="jenkinsEnvironments" value="PROD,QA"/>
    <parameter name="provider" value="mcloud"/>
    <parameter name="stringParam::appcenter_app_name::app center app name" value="Dominguez-Non-IAP-Prod-Enterprise-for-Automation-tvOS"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="stringParam::test::testclass#testmethod filer. If empty execute all of them" value=""/>

    <parameter name="overrideFields" value="init_retry_count=2,init_retry_interval=15"/>

    <test verbose="1" name="DisneyPlus tvOS Details" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.details.DisneyPlusAppleTVDetailsScreenTests">
                <methods>
                    <include name="movieDetailsPageAppearance"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="DisneyPlus tvOS Home" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.home.DisneyPlusAppleTVGlobalNavMenuTest">
                <methods>
                    <include name="globalNavAppearance"/>
                    <include name="globalNavAppearanceKidsProfile"/>
                    <include name="hiddenStateHeroCarousel"/>
                </methods>
            </class>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.home.DisneyPlusAppleTVHomeTests">
                <methods>
                    <include name="verifyHomeScreenLayout"/>
                    <include name="verifyHomeScreenLayout"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="1" name="DisneyPlus tvOS Onboarding" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.onboarding.DisneyPlusAppleTVForgotPasswordTests">
                <methods>
                    <include name="forgotPasswordScreenDetails"/>
                    <include name="createPasswordScreenDetails"/>
                    <include name="createPasswordScreenNavigation"/>
                </methods>
            </class>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.onboarding.DisneyPlusAppleTVLoginTests">
                <methods>
                    <include name="passwordScreenDetailsVerification"/>
                    <include name="passwordScreenNavigation"/>
                    <include name="validatingScreenPostLogIn"/>
                    <include name="profileNameRetention"/>
                    <include name="verifyRestartSubscriptionScreenDetails"/>
                    <include name="userLoggingInWithMultipleProfilesIsTakenToProfileSelection"/>
                </methods>
            </class>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.onboarding.DisneyPlusAppleTVSignUpTest">
                <methods>
                    <include name="passwordCreationScreenDetails"/>
                    <include name="createPasswordStrengthMeter"/>
                </methods>
            </class>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.onboarding.DisneyPlusAppleTVWelcomeScreenTests">
                <methods>
                    <include name="welcomeScreenNavigation"/>
                    <include name="welcomeScreenAppearance"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="DisneyPlus tvOS Settings" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.settings.DisneyPlusAppleTVProfilesTest">
                <methods>
                    <include name="exitFromWhoseWatching"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="1" name="DisneyPlus tvOS Watchlist" parallel="methods">
        <classes>
            <class name="com.disney.qa.tests.disney.apple.tvos.regression.watchlist.DisneyPlusAppleTVWatchlistTest"/>
        </classes>
    </test>
</suite>