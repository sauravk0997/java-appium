<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="DGI - Android Handset - Multievent validation" annotations="JDK" parallel="methods" thread-count="1">

    <parameter name="suiteOwner" value="bsuscavage"/>
    <parameter name="reporting.project-key" value="DGI" />
    <parameter name="hiddenParam::appcenter_app_name::app center app name" value="disney"/>
    <parameter name="applicationPackage" value="com.disney.disneyplus"/>
    <parameter name="jenkinsJobDisabled" value="true"/>
    <parameter name="jenkinsJobType" value="android"/>
    <parameter name="jenkinsJobName" value="DGI-Android-HandSet-Multievent-Validation-Tests"/>
    <parameter name="jenkinsEmail" value="josh.phelps@disneystreaming.com,erik.wallentinsen@disneystreaming.com,nathan.lefler@disneystreaming.com,jennifer.yee@disneystreaming.com,rusty.coleman@hulu.com"/>
    <parameter name="jenkinsEnvironments" value="mobile.google.debug"/>
    <parameter name="jenkinsMobileDefaultPool" value="Samsung_Galaxy_Note_8,Google_Pixel_Device_2,Galaxy_Note_8,Google_Pixel_3,Google_Pixel_3_XL,Google_Pixel_4,Moto_G_Power,Samsung_Galaxy_S10,Samsung_N20,Samsung_Note_9"/>
    <parameter name="jenkinsFetchAppFrom" value="appcenter"/>
    <parameter name="jenkinsDefaultRetryCount" value="3"/>
    <parameter name="overrideFields" value="capabilities.deviceType=Phone,capabilities.locale=${locale},capabilities.language=${language},capabilities.custom_env=${custom_env},custom_string=${events}"/>
    <parameter name="choiceParam::custom_env::App Environment" value="PROD,QA,EDITORIAL,STAGING"/>
    <parameter name="choiceParam::locale::Locale to run" value="US,GB,ES,CA,NL,IT,DE,FR,AU,NZ,JP"/>
    <parameter name="choiceParam::language::Language to run" value="en,es,fr,nl,it,de,ja"/>
    <parameter name="stringParam::events::Events to be sent for validation" value="urn:dss:event:glimpse:impression:pageView,urn:dss:event:glimpse:impression:containerView,urn:dss:event:glimpse:engagement:interaction,urn:dss:event:glimpse:engagement:input,urn:bamtech:api:stream-sample"/>

    <test verbose="1" name="Multievent Android Handset Validation Tests">
        <classes>
            <class name="com.disney.qa.tests.dgi.mobile.android.MultiEventValidationServiceAndroidHandsetTest"/>
        </classes>
    </test>

</suite>
